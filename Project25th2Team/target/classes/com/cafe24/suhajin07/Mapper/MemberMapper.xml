	<insert parameterType="com.cafe24.suhajin07.Dto.Member" id="insertMember">
		INSERT INTO 
			member(memberCode ,memberId ,memberPw ,memberName
					,memberPhone,memberEmail ,memberAddress ,memberDate) 
		VALUES 
		(#{memberCode}, #{memberId}, #{memberPw}, #{memberName},
		#{memberPhone}, #{memberEmail}, #{memberAddress} ,now()) 
	</insert>

	<select parameterType="com.cafe24.suhajin07.Dto.Member" id="login" resultType="String"> 
		SELECT 
			memberName 
		FROM 
			member 
		WHERE 
			memberId=#{memberId}AND memberPw=#{memberPw} 
	</select>

